<!-- Page that displays information on the RGI -->
@page "/rgi"
@using GroceryLibrary
@using GroceryLibrary.Models

<h1>@pageContent[0].HeaderName</h1>

<p>
    <br />
    @pageContent[0].Content <a href="@pageContent[1].Content" target="_blank">@pageContent[1].HeaderName</a>
    @pageContent[2].Content
</p>

<br />
<div style="width: 40%;">
    <img src="@pageContent[3].Content" style="width: 40%;" />
    <img src="@pageContent[4].Content" style="width: 35%; float: right;" />
</div>

@code {
    List<Page> pageContent = SqlDataAccess.getPageContent("RGI");
}